<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.necc.barcodecheck"
        versionCode="7" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Barcode Reader</name>

    <description>
        Barcode Reader using PhoneGap.Build with Barcode Plugin 
    </description>

    <author>
        TN@NECC 
    </author>

	<preference name="phonegap-version" value="2.9.0" />
	<preference name="fullscreen" value="false" />
	<preference name="orientation" value="portrait" />
	<preference name="target-device" value="universal" />
	<preference name="exit-on-suspend" value="true" />
	<preference name="android-minSdkVersion" value="10" />
	<preference name="android-installLocation" value="preferExternal" />
	<preference name="splash-screen-duration" value="3000" />

	<icon src="icon.png" />
	
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	
	<gap:plugin name="BarcodeScanner" />

</widget>